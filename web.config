<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<!--I prefer to not set the <httpErrors errorMode="Detailed"/> for release-->
	<!--<httpErrors errorMode="Detailed"/>-->
  <system.webServer>
    <handlers>
      <add name="iisnode" path="*" verb="*" modules="iisnode"/>
    </handlers>
    <rewrite>
      <rules>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>
    <iisnode nodeProcessCommandLine="C:\Program Files\nodejs\node.exe" loggingEnabled="true" logDirectory="iisnode" devErrorsEnabled="true" />
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
  </system.webServer>
</configuration>
